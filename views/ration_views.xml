<odoo>
    <data>

        <!-- Action -->
        <record id="open_view_ration" model="ir.actions.act_window">
            <field name="name">Ration</field>
            <field name="res_model">stable.ration</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Parent Menu -->
        <menuitem name="Stable Management" id="menu_stable" sequence="10"/>

        <!-- List View -->
        <record id="ration_list_view" model="ir.ui.view">
            <field name="name">stable_ration_list</field>
            <field name="model">stable.ration</field>
            <field name="arch" type="xml">
                <list string="Food Management">
                    <field name="morning_grain_type"/>
                    <field name="quantity"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_form_stable_ration" model="ir.ui.view">
            <field name="name">stable_ration_form</field>
            <field name="model">stable.ration</field>
            <field name="arch" type="xml">
                <form string="Ration">
                    <sheet>
                        <group>
                            <field name="horse_id"/>
                            <field name="moment"/>
                        </group>
                        <field name="ration_line_ids">
                            <tree editable="bottom">
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>