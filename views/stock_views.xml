<odoo>
    <data>
        <!-- Form View -->
        <record id="view_stock_form" model="ir.ui.view">
            <field name="name">stable_stock_form</field>
            <field name="model">stable.stock</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="quantity_available"/>
                            <field name="unit_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="open_view_stocks" model="ir.actions.act_window">
            <field name="name">Stocks</field>
            <field name="res_model">stable.stock</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="menu_stock"
                  name="Stocks"
                  parent="menu_stable"
                  action="open_view_stocks"
                  sequence="10"/>
    </data>
</odoo>